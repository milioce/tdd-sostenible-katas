{
  "name": "ts-eslint-prettier-jest-minimal",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "analize": "npm run lint:fix && npm run compile",
    "compile": "tsc --noEmit",
    "compile:watch": "npm run compile -- --watch",
    "compile:build": "tsc -b",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:watch": "esw --color --watch",
    "lint:fix": "npm run lint -- --fix",
    "format.original": "prettier --config .prettierrc '**/*.+(ts|tsx)'",
    "format": "prettier --config .prettierrc \"**/*.+(ts|tsx)\"",
    "format:fix": "npm run format -- --write",
    "test": "jest --verbose",
    "test:watch": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --coverage",
    "upgrade": "ncu -u"
  },
  "author": "Softwarecrafters.io",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-watch": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "npm-check-updates": "^18.1.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "@types/node": "^24.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "npm run lint:fix",
      "npm run compile",
      "git add . "
    ]
  }
}
